<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Plandit.MainPage">

    <ContentPage.Resources>
        <StyleSheet Source="/Resources/Styles/MainPage.css" />
    </ContentPage.Resources>

    <!-- TODO:
    Step 1: Create a basic To-do list that can be reordered
    Step 2: Get data saving sorted
    Step 3: Allow for folders to store to-do lists
    Step 4: Allow for to-do tasks inside to-do tasks
    Step 5: Allow for time management and linking to calendars
    Step 6: Create push notifications
    Step 7: Beautify folders to represemt projects (Deadline / Desc / Progress / Milestones) -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Margin="10, 5" 
            Padding="8" >

            <VerticalStackLayout>
                <Label Text="Project Title" />
                <Label Text="Project Deadline" />
            </VerticalStackLayout>
        </Border>

        <Border
            Grid.Row="1"
            Margin="10, 5"
            Padding="8" >

            <VerticalStackLayout>
                <Label Text="Project Description" />
                <Label Text="Well this project is just a text that will hopefully represent exactly how a fully set up project will look. An important part is making sure that this row can be scrolled away from because it's a bit obnoxious to have a big ol description box like this constantly in your face." />
            </VerticalStackLayout>
        </Border>

        <Border
            Grid.Row="2"
            Margin="10, 5" >

            <ScrollView>

                <StackLayout
                    VerticalOptions="StartAndExpand"
                    Spacing="25"
                    Padding="30, 30">

                    <Entry 
                        x:Name="taskEntry" 
                        Placeholder="New Todo" />

                    <Button 
                        Text="Add Todo" 
                        Clicked="AddTaskOnClick" />

                    <CollectionView 
                        x:Name="todoListView" 
                        ItemsSource="{Binding tasks}" 
                        CanReorderItems="True" >

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border>
                                    
                                    <Grid
                                        Padding="0" 
                                        BackgroundColor="{AppThemeBinding Light={StaticResource ExowebLightDecor}, Dark={StaticResource ExowebDarkDecor}}">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Border
                                            Grid.Column="0"
                                            BackgroundColor="Transparent" 
                                            StrokeThickness="0"
                                            Padding="8" >

                                            <Label 
                                                Text="{Binding TaskItem}" 
                                                x:Name="TaskItem" 
                                                VerticalOptions="CenterAndExpand"
                                                HorizontalOptions="StartAndExpand" />
                                        </Border>

                                        <Border
                                            Grid.Column="1"
                                            BackgroundColor="Transparent" 
                                            StrokeThickness="0" 
                                            Padding="8" >

                                            <Button 
                                                Clicked="DeleteTaskOnClick" 
                                                MaximumWidthRequest="200"
                                                VerticalOptions="CenterAndExpand"
                                                HorizontalOptions="CenterAndExpand" 
                                                BackgroundColor="{AppThemeBinding Light={StaticResource ExowebLightAccent}, Dark={StaticResource ExowebDarkAccent}}" />
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </ScrollView>
        </Border>
    </Grid>

</ContentPage>
